@{
  Layout = "_Layout";
}

<div class="container">
  <h3>Word Counter</h3>
  <form action='/wordcounter/show' method='post'>
    <label for='userWord'>Enter A Word:</label>
    <input id='userWord' name='userWord' type='text' required>
    <label for='userSentence'>Enter A Sentence:</label>
    <input id='userSentence' name='userSentence' type='text' required>
    <button class="submitbutton" type='submit'>Run The Word Counter</button>
  </form>
</div>
